<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.tour"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_all_activtiy"
    android:orientation="vertical" >
   
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
       android:background="@drawable/top_blue_bg"  >

        <ImageButton
            android:id="@+id/tourdetalils_back"
            android:layout_width="60dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/go_back_style"
              >
        </ImageButton>

        

        <TextView 
              android:id="@+id/tourdetalils_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="详情"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>



      <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none" >
 
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:orientation="vertical"
               android:layout_marginTop="20dip"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/tourdetalils_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dip"
                    android:text="名称"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:textStyle="bold" >
                </TextView>
      			 <LinearLayout 		 
      			     android:id="@+id/tourdetalils_addr_lilyt"
				   android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dip"
                 >
                <ImageView android:visibility="gone"
                    android:id="@+id/tourdetalils_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_position_icon"
                    android:layout_gravity="bottom" >
                </ImageView>

                <TextView
                    android:id="@+id/tourdetalils_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:textColor="#000000"
                    android:text="地址"
                    android:textSize="18sp" 
                      android:layout_marginLeft="5dip"
                     android:layout_gravity="bottom" >
                </TextView>
                <TextView
                    android:id="@+id/tourdetalils_classify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:textColor="#000000"
                    android:text="分类"
                    android:textSize="18sp" 
                      android:layout_marginLeft="20dip"
                     android:layout_gravity="bottom" >
                </TextView>
                </LinearLayout>
            </LinearLayout>
             <LinearLayout  android:visibility="gone"
                   android:id="@+id/tourdetalils_hotel_lilyt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_login_border"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:paddingBottom="10dp"
                 >
      			    <TextView android:visibility="gone"
                android:id="@+id/tourdetalils_hotel_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dip"
                android:text="地址："
                android:textColor="#000000"
                android:textSize="18sp" >
            </TextView>
               <TextView
                android:id="@+id/tourdetalils_hotel_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                android:layout_marginLeft="10dip"
                android:text="酒店级别："
                android:textColor="#000000"
                android:textSize="18sp" ></TextView>
           <TextView
                android:id="@+id/tourdetalils_hotel_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                android:layout_marginLeft="10dip"
                android:text="联系人："
                android:textColor="#000000"
                android:textSize="18sp" >    </TextView>
            <TextView
                android:id="@+id/tourdetalils_hotel_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                android:layout_marginLeft="10dip"
                android:text="电话号码："
                android:textColor="#000000"
                android:textSize="18sp" >
            </TextView>

            <TextView
                android:id="@+id/tourdetalils_hotel_fax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                android:layout_marginLeft="10dip"
                android:text="传真号码："
                android:textColor="#000000"
                android:textSize="18sp" >
            </TextView>
             </LinearLayout>
             
             <LinearLayout  
                 android:layout_weight="0.5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/bg_login_border"
               android:layout_margin="20dp"
                 >
      			 <ScrollView 
      			      android:layout_width="fill_parent"
                android:layout_height="fill_parent"
      			     >
	            <TextView  
	                android:id="@+id/tourdetalils_introduction"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"	     
	                android:lineSpacingExtra="10dp"                   
	                android:padding="10dp"
	                android:gravity="left"
	                android:text="简介： "
	                android:textColor="#000000"
	                android:textSize="18sp"
	                  >
	            </TextView>
	            </ScrollView>
             </LinearLayout>
         <LinearLayout  android:layout_weight="0.5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/bg_login_border"
               android:layout_margin="20dp"
                 >
            <Gallery 
                android:id="@+id/tourdetalils_gy"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
               >
            </Gallery>
           
         </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="10dip"
                android:layout_gravity="bottom"
                android:background="#8f8f8f"
                android:gravity="center"
                android:padding="1dip"
                android:visibility="gone" >

                <com.tour.view.TourCircleFlowIndicator
                    android:id="@+id/exchange_ad_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginRight="-5dip"
                    android:paddingBottom="1dip"
                    android:paddingLeft="1dip"
                    android:paddingRight="-5dip"
                    android:paddingTop="1dip"
                    app:activeColor="#1fb6fc"
                    app:activeType="fill"
                    app:circleSeparation="10dip"
                    app:inactiveColor="#ffffff"
                    app:inactiveType="fill"
                    app:radius="2.4dip" />
            </LinearLayout>
        </LinearLayout>
        
         
    </ScrollView>

</LinearLayout>