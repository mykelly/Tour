<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white"
    >
  <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
      
        <TextView 
             android:id="@+id/customer_item_seat"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="座位号"
             android:textColor="@color/gray"
             android:textSize="16sp"
            />
          <TextView 
             android:id="@+id/customer_item_team"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="组别"
             android:textColor="@color/gray"
             android:textSize="16sp"
            />
            <TextView 
            android:id="@+id/customer_item_name"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="名字"
             android:textColor="@color/gray"
             android:textSize="16sp"
            />
        <TextView 
             android:id="@+id/customer_item_type"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="类型"
             android:textColor="@color/gray"
             android:textSize="16sp"
            />
        <TextView 
             android:id="@+id/customer_item_typeremark"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="类型说明"
             android:textColor="@color/gray"
             android:textSize="16sp"
            />
        <TextView 
             android:id="@+id/customer_item_sex"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="性别"
             android:textColor="@color/gray"
             android:textSize="16sp"
            />
        <TextView 
             android:id="@+id/customer_item_age"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="年龄"
             android:textColor="@color/gray"
             android:textSize="16sp"
            />
        <TextView 
             android:id="@+id/customer_item_phone"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="电话"
             android:textColor="@color/gray"
             android:textSize="16sp"
            />
        <TextView 
             android:id="@+id/customer_item_idno"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="身份证"
             android:textColor="@color/gray"
             android:textSize="16sp"
            />
        <TextView 
             android:id="@+id/customer_item_place"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="接送关口"
             android:textColor="@color/gray"
             android:textSize="16sp"
            />
      
        <TextView 
             android:id="@+id/customer_item_remark"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="备注"
             android:textColor="@color/gray"
             android:textSize="16sp"
            />
        
    </LinearLayout>   

</LinearLayout>