<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tour_top"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tour_top_height"
    android:background="@drawable/top_blue_bg" >

    <ImageButton
        android:id="@+id/tour_top_fresh"
        android:layout_width="60dip"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/title_btn_bg_press"
        android:src="@drawable/bg_fresh_style" >
    </ImageButton>

    <View 
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/tour_top_fresh"
        android:background="@drawable/title_vertical_line" >
    </View>

    <TextView
        android:id="@+id/tour_top_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="20sp" 
         android:text="@string/tour_downloadinfo"/>
<ImageButton
        android:id="@+id/tour_top_exit"
        android:layout_width="60dip"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/exit_style" >
    </ImageButton>
</RelativeLayout>