<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_update_dialog_border" >

        <TextView
            android:id="@+id/tv_update_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="闹钟提醒"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_update_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_update_tip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="闹钟提醒"
            android:textColor="@android:color/black" />

        <View
            android:id="@+id/v_update_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/tv_update_content"
            android:layout_marginTop="15dp"
            android:background="#c9c1b8" />

        <LinearLayout
            android:id="@+id/ll_update_bottom"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/v_update_line" >

            <TextView
                android:id="@+id/tv_update_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#8d8d8d" />

            <TextView
                android:id="@+id/tv_update_suer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="稍后提示"
                android:textSize="17sp"
                 android:textColor="#007aff"  />
        </LinearLayout>
        
         <TextView
                android:id="@+id/tv_no_update_suer"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:text=" 确定"
                android:textSize="17sp"
                android:textColor="#007aff" 
                android:layout_below="@id/v_update_line"
                android:visibility="gone"  />
    </RelativeLayout>

</LinearLayout>